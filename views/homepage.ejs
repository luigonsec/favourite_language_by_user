<div id='github-login-wrapper'>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1>Login with Github<button type="button" class='btn btn-own' name="button" id='login'> <i class="fa fa-github"></i> Login</button></h1>

      </div>
    </div>
  </div>
</div>

<% if( sails.config.github.access_token == null){ %>
<div class="container">
  <div class="row">
      <div class="col-xs-12">
        <div class="alert alert-warning" id='warning-api-limitations'role="alert">
          You must be logged in with Github to avoid API limitations.
        </div>
      </div>
  </div>
</div>

<% } %>
<div id="select-user-form">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3>Type a Github user to check his favourite language</h3>
      </div>
      <div class="col-sm-6">
        <div class="input-group">
          <input type="text" class='form-control' name="name" value="" id='github-user'>
          <span class="input-group-btn">
            <button type="button" class='btn btn-own-inverse' name="button" id='show'>Ok</button>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>


<div id="user-github-stadistics">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div id="canvas-wrapper">
        </div>
      </div>
    </div>
  </div>
</div>
